<div class= "container m-10">
  <div class ="col-12">

<div class="container">
  <h4 style="margin-top: 50px; margin-left: 30px;">Carmen's</h4>
      <h1 style= "margin-left: 30px">Book Repository</h1>
      </div>
<div class="row text-center">


<%@books.each do |book|%>

<div data-aos="fade-up"
data-aos-offset="200"
    data-aos-delay="50"
    data-aos-duration="1000"
>

  <div class="container-fluid">
<div class="card p-2 m-5" style="width: 15rem; background-image: linear-gradient(to top, #abb7a8, #b7c7af, #c5d6b5, #d5e6ba, #e7f5be);">
  <div class="card-header" style="background-color: rgb(255, 254, 244)">
    <strong><%= book.completed? ? "COMPLETE" : "INCOMPLETE" %></strong>
  </div>
  <img class="card-img-top" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" alt="Card image cap">
  <div class="card-body" style="background-color: rgb(255, 255, 255);">
  <h5 class="card-title"><%= link_to book.title, book_path(book)%></h5>
  <h6 class="card-subtitle mb-2 text-muted">  <%=book.author%></h6>
    <p class="card-text">
     </p>
    <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary"%>
    <%=link_to book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-bomb" do%>
         <i class="far fa-trash-alt"></i>
      <%end%>
    </div>
  </div>
</div>
      </div>

<%end%>
</div>
<div class="container">
        <div class="col-12">
  <div class="row-text-center">
<%= link_to "Add a book", new_book_path, class: "btn btn-primary m-3" %>
</div>
</div>
</div>

</div>



</div>


